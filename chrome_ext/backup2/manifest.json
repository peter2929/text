{
	"manifest_version" : 2,

	"name" : "Mark red",
	"description" : "Mark red the negative comments",
	"version" : "0.1",
	
	"browser_action" : {
		"default_icon" : "icon.png"
	},
  "permissions": [
    "http://localhost/"
  ],

"content_scripts": [
  {
    "css": ["bootstrap.min.css"],
    "matches": ["http://*.tvnet.lv/*"],
    "js": ["content.js", "bootstrap.min.js", "jquery-2.1.3.min.js"]
  }]

}