{
	"manifest_version" : 2,

	"name" : "Mark red",
	"description" : "Mark red the negative comments",
	"version" : "0.1",
	
	"browser_action" : {
		"default_icon" : "icon.png"
	},
  "permissions": [
    "http://localhost/"
  ],

"content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["content.js"]
  }]

}